{
  "title": "ZFS Health and Events",
  "description": "Monitor ZFS pool health, scrubs, resilvers, and errors across all systems",
  "widgets": [
    {
      "id": 1,
      "definition": {
        "title": "Recent ZFS Events",
        "title_size": "16",
        "title_align": "left",
        "type": "event_stream",
        "query": "source:zfs",
        "event_size": "l"
      },
      "layout": {
        "x": 0,
        "y": 0,
        "width": 8,
        "height": 4
      }
    },
    {
      "id": 2,
      "definition": {
        "title": "ZFS Events by Type (Last 24h)",
        "title_size": "16",
        "title_align": "left",
        "type": "toplist",
        "requests": [
          {
            "formulas": [
              {
                "formula": "query1",
                "limit": {
                  "count": 10,
                  "order": "desc"
                }
              }
            ],
            "queries": [
              {
                "data_source": "events",
                "name": "query1",
                "search": {
                  "query": "source:zfs"
                },
                "indexes": [
                  "*"
                ],
                "compute": {
                  "aggregation": "count"
                },
                "group_by": [
                  {
                    "facet": "event_type",
                    "limit": 10,
                    "sort": {
                      "order": "desc",
                      "aggregation": "count"
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      "layout": {
        "x": 8,
        "y": 0,
        "width": 4,
        "height": 4
      }
    },
    {
      "id": 3,
      "definition": {
        "title": "ZFS Events Timeline",
        "title_size": "16",
        "title_align": "left",
        "type": "timeseries",
        "requests": [
          {
            "formulas": [
              {
                "formula": "query1"
              }
            ],
            "queries": [
              {
                "data_source": "events",
                "name": "query1",
                "search": {
                  "query": "source:zfs"
                },
                "indexes": [
                  "*"
                ],
                "compute": {
                  "aggregation": "count"
                },
                "group_by": []
              }
            ],
            "response_format": "timeseries",
            "style": {
              "palette": "dog_classic",
              "line_type": "solid",
              "line_width": "normal"
            },
            "display_type": "bars"
          }
        ],
        "yaxis": {
          "scale": "linear",
          "include_zero": true,
          "label": "",
          "min": "auto",
          "max": "auto"
        }
      },
      "layout": {
        "x": 0,
        "y": 4,
        "width": 12,
        "height": 3
      }
    },
