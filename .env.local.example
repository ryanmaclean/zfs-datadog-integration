# Datadog Configuration
# Copy this file to .env.local and fill in your actual values

# Datadog API Key (required)
# Get from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY="your_datadog_api_key_here"

# Datadog Site (optional, defaults to datadoghq.com)
# Options: datadoghq.com, datadoghq.eu, us3.datadoghq.com, etc.
DD_SITE="datadoghq.com"

# Datadog API URL (optional, auto-constructed from DD_SITE)
DD_API_URL="https://api.${DD_SITE}"

# DogStatsD Configuration (optional)
DOGSTATSD_HOST="localhost"
DOGSTATSD_PORT="8125"

# Custom Tags (optional)
DD_TAGS="env:production,service:zfs-monitoring"

# Hostname override (optional, auto-detected if not set)
# HOSTNAME="my-server"
